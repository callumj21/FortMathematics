<?xml version="1.0" encoding="utf-8"?> 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">  
       
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="81dp"
            android:text="Results Breakdown"
            android:textAppearance="?android:attr/textAppearanceLarge" />

           <TextView
               android:id="@+id/TextView02"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/player_score"
               android:layout_marginTop="68dp"
               android:text="Questions"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/questions"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/TextView02"
               android:layout_marginTop="20dp"
               android:text="blah" />

           <TextView
               android:id="@+id/TextView05"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@+id/TextView02"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="33dp"
               android:text="Correct Questions + Times"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/TextView06"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_above="@+id/questions"
               android:layout_alignRight="@+id/player_score"
               android:text="Times"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/player_score"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignRight="@+id/player"
               android:layout_below="@+id/TextView03"
               android:layout_marginTop="30dp"
               android:text="Medium Text"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/TextView04"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_above="@+id/TextView02"
               android:layout_alignParentLeft="true"
               android:text="Score: "
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/player"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/game"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="22dp"
               android:text="Large Text"
               android:textAppearance="?android:attr/textAppearanceLarge" />

           <TextView
               android:id="@+id/TextView03"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/player"
               android:layout_alignBottom="@+id/player"
               android:layout_alignParentLeft="true"
               android:text="Name: "
               android:textAppearance="?android:attr/textAppearanceLarge" />

           <TextView
               android:id="@+id/times"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/questions"
               android:layout_alignBottom="@+id/questions"
               android:layout_alignLeft="@+id/TextView06"
               android:text="blah" />

           <TextView
               android:id="@+id/TextView01"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignRight="@+id/game"
               android:layout_below="@+id/times"
               android:layout_marginTop="23dp"
               android:text="Wrong Questions + Times"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/TextView07"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/TextView01"
               android:layout_marginTop="25dp"
               android:text="Questions"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/TextView08"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/TextView07"
               android:layout_alignBottom="@+id/TextView07"
               android:layout_centerHorizontal="true"
               android:text="Your Answer"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/TextView09"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/TextView08"
               android:layout_alignBottom="@+id/TextView08"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
               android:text="Times"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <TextView
               android:id="@+id/w_questions"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/TextView07"
               android:layout_marginTop="20dp"
               android:text="blah" />

           <TextView
               android:id="@+id/user_answers"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/w_questions"
               android:layout_alignBottom="@+id/w_questions"
               android:layout_alignLeft="@+id/TextView08"
               android:text="blah" />

           <TextView
               android:id="@+id/w_times"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/user_answers"
               android:layout_alignBottom="@+id/user_answers"
               android:layout_alignLeft="@+id/TextView09"
               android:text="blah" />
               
    </RelativeLayout> 
  
</ScrollView>